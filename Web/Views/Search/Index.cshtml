@using Domain.Entities
@model IEnumerable<User>
@{
    ViewBag.Title = "Поиск пользователей";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div id="leftcol">
    @Html.Partial("Menu")
    <ul id="menu">
    <li>@Ajax.ActionLink("Моя страница", "Index", "Home",new AjaxOptions{ UpdateTargetId="rightcol"})</li>
    <li>@Ajax.ActionLink("Друзья", "Index", "Friends",new AjaxOptions{ UpdateTargetId="rightcol"})</li>
    <li>@Ajax.ActionLink("Сообщения", "Index", "Messages",new AjaxOptions{ UpdateTargetId="rightcol"})</li>
    <li>@Ajax.ActionLink("Блог", "Index", "Search",new AjaxOptions{ UpdateTargetId="rightcol"})</li>
</ul>
</div>
<div id="rightcol">
    <h2>Поиск пользователей</h2>
    <div>
        @using (Html.BeginForm())
        {
            <p>
                Попробуйте найти пользователя по ФИО:
            </p>
            <p>
                Фамилия: @Html.TextBox("lastName")
            </p>
            <p>
                Имя: @Html.TextBox("firstName")
            </p>
            <p>
                Отчество: @Html.TextBox("middleName")
            </p>
            <input type="submit" value="Найти человека" />
        }
    </div>
    @if (Model != null && Model.Any())
    {
        <p>
            Результаты поиска:
        </p>
        foreach (User user in Model)
        {
        <div>@Html.ActionLink(user.LastName + " " + user.FirstName + " " + user.MiddleName, "Index", "Home", new { id = user.Id }, null)
        </div>
        }
    }
</div>
