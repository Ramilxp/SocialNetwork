<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Моя первая верстка</title>
    <link href="/Images/Blogger.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="/Content/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Site.css" rel="stylesheet" />
    <script type="text/javascript" src="/Scripts/modernizr-2.5.3.js"></script>

</head>
<body>
<header>
    <section class="featured">
        <div class="content-wrapper" style="height: 50px; padding-bottom: 30px;">
            <div class="float-left">
                <p class="site-title"><a href="/"><img src="/Images/Blogger.ico"/></a></p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>
                            <input data-val="true" data-val-required="Требуется поле Имя пользователя." id="UserName" name="UserName" type="text" value="" />
                        </li>
                        <li>@Html.ActionLink("Поиск", "Index", "Search")</li>
                        <li>@Html.ActionLink("Выйти", "Logout", "Account")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
</header>

<section class="content-wrapper main-content clear-fix">
    @RenderBody()
</section>

    <script src='@Url.Content("~/Scripts/jquery-1.7.1.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")' type="text/javascript"></script>

    <script src="/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="/Scripts/jquery.validate.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
    
     <script>
         $(document).ready(function () {

             $.ajaxSetup({ cache: false });

             $(".viewDialog").on("click", function (e) {
                 e.preventDefault();

                 $("<div></div>")
                     .addClass("dialog")
                     .appendTo("body")
                     .dialog({
                         title: $(this).attr("data-dialog-title"),
                         close: function () { $(this).remove() },
                         modal: true
                     })
                     .load(this.href);
             });
             $(".close").on("click", function (e) {
                 e.preventDefault();
                 $(this).closest(".dialog").dialog("close");
             });
         });
    </script>
</body>
</html>
